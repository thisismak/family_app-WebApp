{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "outDir": "dist"
  },
  "include": ["src/**/*", "ormconfig.ts", "migrations/**/*", "server.ts"],
  "exclude": ["node_modules"]
}
